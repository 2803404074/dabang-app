<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingVertical="@dimen/dp_5"
    android:layout_height="wrap_content">


   <RelativeLayout
       android:paddingRight="@dimen/dp_5"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
      <com.facebook.drawee.view.SimpleDraweeView
          android:id="@+id/sdvHead"
          android:layout_marginHorizontal="@dimen/dp_5"
          android:layout_width="@dimen/dp_35"
          android:layout_height="@dimen/dp_35"
          fresco:roundAsCircle="true" />

      <TextView
          android:id="@+id/tvNickName"
          android:layout_toRightOf="@+id/sdvHead"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="@dimen/sp_14"
          android:text="还挑跳"/>
      <TextView
          android:id="@+id/tvContent"
          android:textColor="@color/textTitle"
          android:textSize="@dimen/sp_14"
          android:layout_marginVertical="@dimen/dp_3"
          android:layout_below="@+id/tvNickName"
          android:layout_toRightOf="@+id/sdvHead"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="好看"/>
      <TextView
          android:id="@+id/tvDate"
          android:textSize="@dimen/sp_12"
          android:layout_below="@+id/tvContent"
          android:layout_toRightOf="@+id/sdvHead"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="2019-12-16"/>

      <ImageView
          android:id="@+id/ivDz"
          android:layout_width="@dimen/dp_30"
          android:layout_height="@dimen/dp_20"
          android:layout_alignParentRight="true"
          android:layout_marginTop="@dimen/dp_5"
          android:src="@mipmap/mess_dz"/>
      <TextView
          android:id="@+id/tvDzNum"
          android:layout_alignParentRight="true"
          android:layout_below="@+id/ivDz"
          android:gravity="center"
          android:layout_width="@dimen/dp_30"
          android:layout_height="wrap_content"
          android:text="255"/>
   </RelativeLayout>

   <View
       android:layout_width="match_parent"
       android:layout_height="1px"
       android:layout_marginTop="@dimen/dp_8"
       android:background="@color/color_e2e2e2"/>


</LinearLayout>