<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="@dimen/dp_5"
    android:fitsSystemWindows="true"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/ivBack"
        android:layout_width="@dimen/sp_30"
        android:layout_height="@dimen/sp_30"
        android:padding="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_30"
        android:src="@mipmap/back_w_black"/>

    <androidx.core.widget.NestedScrollView
        android:fillViewport="true"
        android:overScrollMode="never"
        android:layout_below="@+id/ivBack"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_above="@+id/llBottom"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/sdvHead"
                    android:visibility="visible"
                    android:layout_width="@dimen/dp_35"
                    android:layout_height="@dimen/dp_35"
                    fresco:roundAsCircle="true" />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/dp_5"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tvNick"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="昵称"
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/textTitle"/>
                    <TextView
                        android:id="@+id/tvDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_14"
                        android:text="10月15日21:03" />

                    <TextView
                        android:id="@+id/tvContent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/textTitle"
                        android:textSize="@dimen/sp_15"
                        android:layout_marginVertical="@dimen/dp_10"
                        android:text="今天直播了三小时，收入2000元，牛逼。"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycle_img"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="@dimen/dp_28"
                            android:layout_height="@dimen/dp_28"
                            android:padding="@dimen/dp_5"
                            android:src="@mipmap/gift"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="送礼物"/>

                        <ImageView
                            android:id="@id/ivShare"
                            android:layout_width="@dimen/dp_28"
                            android:layout_height="@dimen/dp_28"
                            android:padding="@dimen/dp_6"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:src="@mipmap/share_dy"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="分享"/>

                        <ImageView
                            android:id="@+id/ivComment"
                            android:layout_width="@dimen/dp_28"
                            android:layout_height="@dimen/dp_28"
                            android:padding="@dimen/dp_5"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:src="@mipmap/comment"/>
                        <TextView
                            android:id="@+id/tvCommentNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textSize="@dimen/sp_14"
                            android:text="15"/>
                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycle_comment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="@dimen/dp_0"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <include layout="@layout/dialog_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>