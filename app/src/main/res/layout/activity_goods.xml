<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:layout_above="@+id/llBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_230"
                android:background="@color/colorWhite"
                android:clipChildren="false"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:weightSum="200">

                <com.dabangvr.mall.adapter.ViewPagerTransform
                    android:id="@+id/viewpager"
                    android:layout_width="@dimen/dp_280"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_weight="120"
                    android:clipChildren="false" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_20"
                android:layout_marginVertical="@dimen/dp_5"
                android:paddingHorizontal="@dimen/dp_8"
                android:textColor="@color/textTitle"
                android:text="新动生活 冷冻智利王蟹1.2-1.4kg/只 礼盒装 海鲜水产"/>

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorGray4"
                android:textSize="@dimen/sp_15"
                android:paddingHorizontal="@dimen/dp_8"
                android:text="原产地直接发货，给您最新鲜的味道原产地直接发货，给您最新鲜的味道原产地直接发货，给您最新鲜的味道"/>

            <LinearLayout
                android:paddingHorizontal="@dimen/dp_8"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/colorAccentButton"
                    android:text="¥"/>
                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_25"
                    android:textColor="@color/colorAccentButton"
                    android:text="285~380"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_18"
                    android:layout_gravity="center"
                    android:text="/只"/>

                <TextView
                    android:id="@+id/m_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_25"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:text="¥316"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="1px"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/tv_salseNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_15"
                    android:layout_gravity="center"
                    android:text="已售36"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:background="@color/color_ebebeb" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycle_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


            <!--地址-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/dp_10"
                android:paddingHorizontal="@dimen/dp_8"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="收货地址"
                    android:textColor="@color/transitionSelectorBG"
                    android:textSize="@dimen/sp_16"/>
                <TextView
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/red"
                    android:text="广西防城港东兴市"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="1px"
                    android:layout_weight="1"/>
                <ImageView
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:padding="@dimen/dp_5"
                    android:src="@mipmap/back_b_black"/>
            </LinearLayout>

            <!--运费-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/dp_10"
                android:paddingHorizontal="@dimen/dp_8"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="运费"
                    android:textColor="@color/transitionSelectorBG"
                    android:textSize="@dimen/sp_16"/>
                <TextView
                    android:id="@+id/tv_yf"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/transitionSelectorBG"
                    android:text="3只包邮"/>
            </LinearLayout>

            <!--服务-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/dp_10"
                android:paddingHorizontal="@dimen/dp_8"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="服务"
                    android:textColor="@color/transitionSelectorBG"
                    android:textSize="@dimen/sp_16"/>
                <TextView
                    android:id="@+id/tv_server"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/colorDb3"
                    android:text="假一赔十·支持7天退换·三只包邮....."/>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <!--简介-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/dp_10"
                android:paddingHorizontal="@dimen/dp_8"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="特产简介"
                    android:textColor="@color/transitionSelectorBG"
                    android:textSize="@dimen/sp_16"/>
                <TextView
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/transitionSelectorBG"
                    android:text="土特产（土产）指某地特有的或特别著名的产品。广义的土特产，不仅包含着农林特产，而且也将矿物产品、纺织品、工艺品等包括进去，一般而言，土特产是指来源于特定区域、品质优异的农林产品或加工产品，土特产可以是直接采收的原料，也可以经特殊工艺加工的制品，无论是原料还是制品，其品质与同类产品相比，应该是特优的或有特色的。"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:background="@color/color_ebebeb" />

            <WebView
                android:layout_marginTop="@dimen/dp_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="WebViewLayout" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/llBottom"
        android:background="@color/colorWhite"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:padding="@dimen/dp_5"
        android:orientation="horizontal">
        <TextView
            android:background="@drawable/shape_gray_w"
            android:paddingHorizontal="@dimen/dp_20"
            android:paddingVertical="@dimen/dp_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_18"
            android:layout_marginRight="@dimen/dp_5"
            android:textColor="@color/textTitle"
            android:text="加入购物车"/>

        <TextView
            android:id="@+id/tvBuyNow"
            android:background="@drawable/shape_style_green_blue"
            android:paddingHorizontal="@dimen/dp_20"
            android:paddingVertical="@dimen/dp_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_18"
            android:textColor="@android:color/white"
            android:text="立即购买"/>
    </LinearLayout>

    <ImageView
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_5"
        android:src="@mipmap/round_back"/>
</RelativeLayout>
