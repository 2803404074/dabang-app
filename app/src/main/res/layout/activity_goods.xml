<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="goodsVo"
            type="com.dbvr.baselibrary.model.GoodsVo" />
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/llBottom">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_230"
                    android:background="@color/colorWhite"
                    android:clipChildren="false"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:weightSum="200">

                    <com.dabangvr.mall.adapter.ViewPagerTransform
                        android:id="@+id/viewpager"
                        android:layout_width="@dimen/dp_280"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:layout_weight="120"
                        android:clipChildren="false" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/dp_5"
                    android:paddingHorizontal="@dimen/dp_8"
                    android:text="@{goodsVo.title}"
                    android:textColor="@color/textTitle"
                    android:textSize="@dimen/sp_20" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:orientation="horizontal"
                    android:paddingHorizontal="@dimen/dp_8">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/money"
                        android:textColor="@color/colorAccentButton"
                        android:textSize="@dimen/sp_15" />

                    <TextView
                        android:id="@+id/tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{goodsVo.retailPrice}"
                        android:textColor="@color/colorAccentButton"
                        android:textSize="@dimen/sp_25" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="/只"
                        android:textSize="@dimen/sp_18" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:text="@string/money"
                        android:textSize="@dimen/sp_25" />
                    <TextView
                        android:id="@+id/m_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@{goodsVo.marketPrice}"
                        android:textSize="@dimen/sp_25" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1px"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/tv_salseNum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@{@string/salesNum+goodsVo.salesVolume}"
                        android:textSize="@dimen/sp_15" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_10"
                    android:background="@color/color_ebebeb" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:paddingHorizontal="@dimen/dp_10"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="@dimen/sp_15"
                        android:textColor="@color/red"
                        android:textStyle="bold"
                        android:layout_marginTop="@dimen/dp_2"
                        android:text="¥"/>
                    <TextView
                        android:id="@+id/tvProductPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="@dimen/sp_21"
                        android:textColor="@color/red"
                        android:textStyle="bold"
                        android:text="99"/>
                    <View
                        android:layout_width="0dp"
                        android:layout_height="1px"
                        android:layout_weight="1"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="@dimen/sp_15"
                        android:textColor="@color/textTitle"
                        android:textStyle="bold"
                        android:text="已选："/>
                    <TextView
                        android:id="@+id/tvProduct"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="@dimen/sp_15"
                        android:textColor="@color/textTitle"
                        android:textStyle="bold"
                        android:text="产品1"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="@dimen/sp_15"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:textColor="@color/lsq_color_gray"
                        android:textStyle="bold"
                        android:text="剩余："/>
                    <TextView
                        android:id="@+id/tvKc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="@dimen/sp_15"
                        android:textColor="@color/lsq_color_gray"
                        android:textStyle="bold"
                        android:text="55件"/>


                </LinearLayout>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycle_product"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <!--地址-->
                <LinearLayout
                    android:id="@+id/llAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="@dimen/dp_5"
                    android:orientation="horizontal"
                    android:paddingHorizontal="@dimen/dp_8">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="收货地址"
                        android:layout_gravity="center"
                        android:textColor="@color/transitionSelectorBG"
                        android:textSize="@dimen/sp_16" />

                    <TextView
                        android:id="@+id/tvAddress"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:text="地址"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:textColor="@color/red"
                        android:textSize="@dimen/sp_16" />

                    <ImageView
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"
                        android:padding="@dimen/dp_5"
                        android:layout_gravity="center"
                        android:src="@mipmap/back_b_black" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="@color/color_e2e2e2"/>

                <!--运费-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/dp_10"
                    android:orientation="horizontal"
                    android:paddingHorizontal="@dimen/dp_8">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="运费"
                        android:textColor="@color/transitionSelectorBG"
                        android:textSize="@dimen/sp_16" />

                    <TextView
                        android:id="@+id/tv_yf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:text="@{goodsVo.logisticsPrice}"
                        android:textColor="@color/transitionSelectorBG"
                        android:textSize="@dimen/sp_16" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_10"
                    android:background="@color/color_ebebeb" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="@dimen/sp_16"
                    android:layout_marginVertical="@dimen/dp_5"
                    android:textColor="@color/textTitle"
                    android:text="更多详情"/>
                <WebView
                    android:id="@+id/mWebView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    tools:ignore="WebViewLayout" >
                </WebView>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

        <LinearLayout
            android:id="@+id/llBottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:paddingHorizontal="@dimen/dp_5"
            android:background="@color/colorWhite"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/rlCollect"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <CheckBox
                    android:id="@+id/cbC"
                    android:layout_width="@dimen/dp_25"
                    android:layout_height="@dimen/dp_25"
                    android:background="@drawable/selector_collect"
                    android:button="@null" />
                <TextView
                    android:id="@+id/tvCollect"
                    android:layout_below="@+id/cbC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:textSize="@dimen/sp_10"
                    android:textColor="@color/color_8d8c8c"
                    android:text="收藏"/>
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rlGoods"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/ivGood"
                    android:padding="@dimen/dp_2"
                    android:layout_width="@dimen/dp_25"
                    android:layout_height="@dimen/dp_25"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/goods" />
                <TextView
                    android:id="@+id/tvGoods"
                    android:layout_below="@+id/ivGood"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:textSize="@dimen/sp_10"
                    android:text="更多同款"/>
            </RelativeLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="1px"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/tvBuyNow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_style_green_blue"
                android:paddingHorizontal="@dimen/dp_20"
                android:paddingVertical="@dimen/dp_5"
                android:text="立即购买"
                android:layout_marginVertical="@dimen/dp_5"
                android:textColor="@android:color/white"
                android:textSize="@dimen/sp_18" />
        </LinearLayout>

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_30"
            android:src="@mipmap/round_back" />
    </RelativeLayout>
</layout>

