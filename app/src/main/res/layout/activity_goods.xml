<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="goodsVo"
            type="com.dbvr.baselibrary.model.GoodsVo" />
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/llBottom">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_230"
                    android:background="@color/colorWhite"
                    android:clipChildren="false"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:weightSum="200">

                    <com.dabangvr.mall.adapter.ViewPagerTransform
                        android:id="@+id/viewpager"
                        android:layout_width="@dimen/dp_280"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:layout_weight="120"
                        android:clipChildren="false" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/dp_5"
                    android:paddingHorizontal="@dimen/dp_8"
                    android:text="@{goodsVo.title}"
                    android:textColor="@color/textTitle"
                    android:textSize="@dimen/sp_20" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:orientation="horizontal"
                    android:paddingHorizontal="@dimen/dp_8">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/money"
                        android:textColor="@color/colorAccentButton"
                        android:textSize="@dimen/sp_15" />

                    <TextView
                        android:id="@+id/tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{goodsVo.retailPrice}"
                        android:textColor="@color/colorAccentButton"
                        android:textSize="@dimen/sp_25" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="/只"
                        android:textSize="@dimen/sp_18" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:text="@string/money"
                        android:textSize="@dimen/sp_25" />
                    <TextView
                        android:id="@+id/m_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@{goodsVo.marketPrice}"
                        android:textSize="@dimen/sp_25" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1px"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/tv_salseNum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@{@string/salesNum+goodsVo.salesVolume}"
                        android:textSize="@dimen/sp_15" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_10"
                    android:background="@color/color_ebebeb" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycle_comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


                <!--地址-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/dp_10"
                    android:orientation="horizontal"
                    android:paddingHorizontal="@dimen/dp_8">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="收货地址"
                        android:textColor="@color/transitionSelectorBG"
                        android:textSize="@dimen/sp_16" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:text="@{goodsVo.receivingAddress}"
                        android:textColor="@color/red"
                        android:textSize="@dimen/sp_16" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1px"
                        android:layout_weight="1" />

                    <ImageView
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"
                        android:padding="@dimen/dp_5"
                        android:src="@mipmap/back_b_black" />
                </LinearLayout>

                <!--运费-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/dp_10"
                    android:orientation="horizontal"
                    android:paddingHorizontal="@dimen/dp_8">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="运费"
                        android:textColor="@color/transitionSelectorBG"
                        android:textSize="@dimen/sp_16" />

                    <TextView
                        android:id="@+id/tv_yf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:text="@{goodsVo.logisticsPrice}"
                        android:textColor="@color/transitionSelectorBG"
                        android:textSize="@dimen/sp_16" />
                </LinearLayout>

                <!--服务-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/dp_10"
                    android:orientation="horizontal"
                    android:paddingHorizontal="@dimen/dp_8">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="服务"
                        android:textColor="@color/transitionSelectorBG"
                        android:textSize="@dimen/sp_16" />

                    <TextView
                        android:id="@+id/tv_server"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:text="@{goodsVo.supportService}"
                        android:textColor="@color/colorDb3"
                        android:textSize="@dimen/sp_16" />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <!--简介-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/dp_10"
                    android:orientation="horizontal"
                    android:paddingHorizontal="@dimen/dp_8">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="产品简介"
                        android:textColor="@color/transitionSelectorBG"
                        android:textSize="@dimen/sp_16" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:text="@{goodsVo.introduce}"
                        android:textColor="@color/transitionSelectorBG"
                        android:textSize="@dimen/sp_16" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_10"
                    android:background="@color/color_ebebeb" />

                <WebView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    tools:ignore="WebViewLayout" >
                </WebView>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

        <LinearLayout
            android:id="@+id/llBottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/colorWhite"
            android:gravity="right"
            android:orientation="horizontal"
            android:padding="@dimen/dp_5">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_5"
                android:background="@drawable/shape_gray_w"
                android:paddingHorizontal="@dimen/dp_20"
                android:paddingVertical="@dimen/dp_5"
                android:text="收藏"
                android:textColor="@color/textTitle"
                android:textSize="@dimen/sp_18" />

            <TextView
                android:id="@+id/tvBuyNow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_style_green_blue"
                android:paddingHorizontal="@dimen/dp_20"
                android:paddingVertical="@dimen/dp_5"
                android:text="立即购买"
                android:textColor="@android:color/white"
                android:textSize="@dimen/sp_18" />
        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_15"
            android:src="@mipmap/round_back" />
    </RelativeLayout>
</layout>

