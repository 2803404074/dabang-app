<?xml version="1.0" encoding="utf-8"?>
<com.cold.library.SlideLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    tools:context="com.tencent.liteav.demo.my.activity.VideoActivity">

    <TextureView
        android:id="@+id/play_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!--清屏内容放在这里-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/dp_25"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:paddingVertical="@dimen/dp_2"
                android:paddingHorizontal="@dimen/dp_5"
                android:maxWidth="@dimen/dp_40"
                android:background="@drawable/shape_touming"
                android:orientation="horizontal">
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/sdvHead"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:layout_gravity="center"
                    fresco:roundAsCircle="true" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/auth_name"
                        android:textColor="#fff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="祖国小公举~~"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:maxLength="30"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/dp_15"
                            android:layout_height="@dimen/dp_15"
                            android:layout_gravity="center"
                            android:src="@mipmap/hots" />

                        <TextView
                            android:textColor="#fff"
                            android:id="@+id/tvHots"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:gravity="center"
                            android:text="12" />
                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/play_follow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_5"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="#fff"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/shape_style_green_blue"
                    android:text="关注" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recy_top_head"
                android:paddingLeft="5dp"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycle_comment"
            android:layout_width="250dp"
            android:paddingLeft="10dp"
            android:layout_marginRight="10dp"
            android:paddingBottom="50dp"
            android:layout_above="@+id/zb_bootom"
            android:layout_height="300dp">
        </androidx.recyclerview.widget.RecyclerView>



        <LinearLayout
            android:id="@+id/zb_bootom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:padding="@dimen/dp_10"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/llComment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/shape_touming"
                android:paddingHorizontal="@dimen/dp_10"
                android:paddingVertical="@dimen/dp_3"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:src="@mipmap/comment"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="来聊聊天吧..."
                    android:layout_marginLeft="@dimen/dp_5"
                    android:textSize="@dimen/sp_15"
                    android:layout_gravity="center"
                    android:textColor="#cdcdcd"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/ivGift"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_marginLeft="@dimen/dp_5"
                android:src="@mipmap/gift" />
            <ImageView
                android:id="@+id/ivGoods"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:src="@mipmap/goods"
                android:layout_marginHorizontal="@dimen/dp_5" />

            <ImageView
                android:id="@+id/ivShare"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:src="@mipmap/wechat_frends" />
            <View
                android:layout_width="0dp"
                android:layout_height="1px"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/ivClose"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:src="@mipmap/cancel"
                />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_150"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/etContent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tvSend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_18"
            android:padding="@dimen/dp_5"
            android:textColor="@android:color/black"
            android:text="发送(测试)"/>
    </LinearLayout>

</com.cold.library.SlideLayout>