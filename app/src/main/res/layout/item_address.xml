<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_80"
    android:paddingHorizontal="@dimen/dp_5"
    android:layout_marginVertical="@dimen/dp_5"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:layout_gravity="center"
        android:layout_marginVertical="@dimen/dp_10"
        android:src="@mipmap/main_function_live"/>

    <RelativeLayout
        android:layout_width="0dp"
        android:paddingVertical="@dimen/dp_2"
        android:paddingHorizontal="@dimen/dp_5"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="海跳跳"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/textTitle"/>
        <TextView
            android:id="@+id/tvPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tvName"
            android:textSize="@dimen/sp_14"
            android:text="18894720202"/>
        <TextView
            android:id="@+id/tvDefault"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="默认"
            android:layout_marginVertical="@dimen/dp_2"
            android:textColor="@color/white"
            android:layout_below="@+id/tvName"
            android:padding="@dimen/dp_2"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@color/colorDb5"/>

        <TextView
            android:id="@+id/tvHome"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="家"
            android:layout_marginVertical="@dimen/dp_2"
            android:padding="@dimen/dp_2"
            android:layout_below="@+id/tvName"
            android:layout_toRightOf="@+id/tvDefault"
            android:background="@color/color_e2e2e2"/>

        <TextView
            android:id="@+id/tvAddress"
            android:layout_below="@+id/tvDefault"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="2"
            android:ellipsize="end"
            android:text="广西广西南宁南宁广西广西南宁南宁广西广西南宁南宁广西广西南宁南宁广西广西南宁南宁"/>
    </RelativeLayout>


    <View
        android:layout_toRightOf="@+id/tvAddress"
        android:layout_width="1px"
        android:layout_height="@dimen/dp_25"
        android:layout_gravity="center"
        android:layout_marginHorizontal="@dimen/dp_5"
        android:background="@color/speedTextNormal"/>

    <TextView
        android:id="@+id/tvEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="@dimen/dp_5"
        android:text="编辑"/>
</LinearLayout>