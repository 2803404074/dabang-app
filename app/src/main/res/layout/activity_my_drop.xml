<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.MyDropActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_30"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="@dimen/dp_28"
            android:layout_height="@dimen/dp_28"
            android:src="@mipmap/back_w_black"
            android:padding="@dimen/dp_5"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的跳币"
            android:layout_marginLeft="@dimen/dp_5"
            android:textColor="@color/textTitle"
            android:layout_gravity="center"
            android:textSize="@dimen/sp_21"/>
        <View
            android:layout_width="wrap_content"
            android:layout_height="1px"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="@dimen/sp_15"
            android:layout_marginRight="@dimen/dp_10"
            android:text="礼物收益明细>>" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginTop="@dimen/dp_5"
        android:background="@color/divider"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_100"
        android:padding="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_gravity="center"
            android:src="@mipmap/test12"/>
        <LinearLayout
            android:paddingHorizontal="@dimen/dp_5"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:gravity="center|left"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="可用跳币：1200"
                android:textColor="@color/textTitle"
                android:textSize="@dimen/sp_16" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_15"
                android:layout_marginTop="@dimen/dp_5"
                android:text="可提现：1200（当日提现，次日到账）"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提现"
            android:textSize="@dimen/sp_16"
            android:layout_gravity="center"
            android:textColor="@android:color/white"
            android:background="@drawable/shape_red"
            android:paddingHorizontal="@dimen/dp_10"
            android:paddingVertical="@dimen/dp_2"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvDrop"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_17"
            android:padding="@dimen/dp_5"
            android:textColor="@color/colorAccentButton"
            android:text="购买跳币"/>

        <TextView
            android:id="@+id/tvVip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_17"
            android:padding="@dimen/dp_5"
            android:textColor="@color/colorGray4"
            android:text="开通VIP"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginVertical="@dimen/dp_5"
        android:background="@color/divider"/>

    <LinearLayout
        android:id="@+id/llDrop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/dp_10"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:src="@mipmap/tiaob"/>
            <EditText
                android:id="@+id/etInput"
                android:layout_width="@dimen/dp_100"
                android:layout_height="match_parent"
                android:gravity="center"
                android:inputType="number"
                android:layout_marginRight="@dimen/dp_10"
                android:hint="自定义"/>
            <View
                android:layout_width="wrap_content"
                android:layout_height="1px"
                android:layout_weight="1"/>


            <TextView
                android:id="@+id/tvZdy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥?"
                android:textSize="@dimen/sp_15"
                android:background="@drawable/shape_red"
                android:textColor="@android:color/white"
                android:paddingHorizontal="@dimen/dp_10"
                android:layout_gravity="center"
                android:paddingVertical="@dimen/dp_2"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginVertical="@dimen/dp_5"
            android:background="@color/divider"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:src="@mipmap/tiaob"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_18"
                android:layout_gravity="center"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:text="100"/>
            <View
                android:layout_width="wrap_content"
                android:layout_height="1px"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/tvS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥10"
                android:textSize="@dimen/sp_15"
                android:background="@drawable/shape_red"
                android:textColor="@android:color/white"
                android:paddingHorizontal="@dimen/dp_10"
                android:layout_gravity="center"
                android:paddingVertical="@dimen/dp_2"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginVertical="@dimen/dp_5"
            android:background="@color/divider"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:src="@mipmap/tiaob"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_18"
                android:layout_gravity="center"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:text="200"/>
            <View
                android:layout_width="wrap_content"
                android:layout_height="1px"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/tvEs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥20"
                android:background="@drawable/shape_red"
                android:textColor="@android:color/white"
                android:paddingHorizontal="@dimen/dp_10"
                android:textSize="@dimen/sp_15"
                android:paddingVertical="@dimen/dp_2"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginVertical="@dimen/dp_5"
            android:background="@color/divider"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:src="@mipmap/tiaob"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_18"
                android:layout_gravity="center"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:text="500"/>
            <View
                android:layout_width="wrap_content"
                android:layout_height="1px"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/tvWs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥50"
                android:textSize="@dimen/sp_15"
                android:background="@drawable/shape_red"
                android:textColor="@android:color/white"
                android:paddingHorizontal="@dimen/dp_10"
                android:paddingVertical="@dimen/dp_2"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginVertical="@dimen/dp_5"
            android:background="@color/divider"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:src="@mipmap/tiaob"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_18"
                android:layout_gravity="center"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:text="1000"/>
            <View
                android:layout_width="wrap_content"
                android:layout_height="1px"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/tvYb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥100"
                android:textSize="@dimen/sp_15"
                android:background="@drawable/shape_red"
                android:textColor="@android:color/white"
                android:paddingHorizontal="@dimen/dp_10"
                android:paddingVertical="@dimen/dp_2"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginVertical="@dimen/dp_5"
            android:background="@color/divider"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:src="@mipmap/tiaob"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_18"
                android:layout_gravity="center"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:text="2000"/>
            <View
                android:layout_width="wrap_content"
                android:layout_height="1px"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/tvEb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥200"
                android:textSize="@dimen/sp_15"
                android:background="@drawable/shape_red"
                android:textColor="@android:color/white"
                android:paddingHorizontal="@dimen/dp_10"
                android:paddingVertical="@dimen/dp_2"/>
        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/dialog_vip"/>

</LinearLayout>