<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.MyDropActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_35"
        android:background="@color/colorDb5"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="@dimen/dp_28"
            android:layout_height="@dimen/dp_28"
            android:src="@mipmap/back_w"
            android:padding="@dimen/dp_5"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的跳币"
            android:layout_marginLeft="@dimen/dp_5"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:textSize="@dimen/sp_21"/>
        <View
            android:layout_width="wrap_content"
            android:layout_height="1px"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tvDetailed"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="@dimen/sp_15"
            android:padding="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_10"
            android:text="礼物收益明细>>" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_100"
        android:padding="@dimen/dp_10"
        android:background="@color/colorDb5"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_gravity="center"
            android:src="@mipmap/test12"/>
        <LinearLayout
            android:paddingHorizontal="@dimen/dp_5"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:gravity="center|left"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvDropNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="可用跳币：1200"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_15"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/dp_5"
                android:text="当日提现，次日到账"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提现"
            android:textSize="@dimen/sp_18"
            android:layout_gravity="center"
            android:textColor="@android:color/white"
            android:background="@drawable/shape_style_yellow_org"
            android:paddingHorizontal="@dimen/dp_15"
            android:paddingVertical="@dimen/dp_2"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginVertical="@dimen/dp_5"
        android:background="@color/divider"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycle_cz"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/tvSeeServer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="跳币规则>>"
        android:padding="@dimen/dp_5"
        android:layout_margin="@dimen/dp_10"
        android:layout_gravity="right"/>
    <TextView
        android:id="@+id/tvConfirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="@dimen/dp_5"
        android:textSize="@dimen/sp_18"
        android:textColor="@android:color/white"
        android:paddingVertical="@dimen/dp_10"
        android:layout_marginHorizontal="@dimen/dp_20"
        android:background="@drawable/shape_style_yellow_org"

        android:text="确认充值" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/dp_10"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_15"
            android:text="已阅读并同意"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/colorDb5"
            android:text="《用户充值协议》"/>

    </LinearLayout>


</LinearLayout>