<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_150"
        android:orientation="horizontal"
        android:gravity="center|top"
        android:paddingTop="@dimen/dp_35"
        android:background="@drawable/shape_style_db_green">

        <ImageView
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:src="@mipmap/hots"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="广西"
            android:layout_marginHorizontal="@dimen/dp_5"
            android:textSize="@dimen/sp_20"
            android:textColor="@android:color/white"
            android:textStyle="bold"/>
        <ImageView
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:src="@mipmap/dsj"/>
    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_marginTop="@dimen/dp_80"
        android:paddingBottom="@dimen/dp_70"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <include layout="@layout/item_tc_head"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="@dimen/dp_10"
                android:layout_height="@dimen/dp_200" />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_tc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</RelativeLayout>
