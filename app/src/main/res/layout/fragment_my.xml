<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/dp_70"
    android:background="#F5F5F5">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--个人信息-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_220"
                android:background="@drawable/list_style_theme_top">

                <RelativeLayout
                    android:id="@+id/fl"
                    android:layout_width="@dimen/dp_80"
                    android:layout_height="@dimen/dp_80"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_55"
                    android:background="@mipmap/ruone">

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/sdvHead"
                        android:layout_width="@dimen/dp_65"
                        android:layout_height="@dimen/dp_65"
                        android:layout_centerInParent="true"
                        fresco:roundAsCircle="true" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_65"
                    android:layout_toRightOf="@+id/fl"
                    android:drawableRight="@mipmap/back_b"
                    android:drawablePadding="@dimen/dp_5"
                    android:text="无敌风火轮"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/sp_13" />

                <!--会员等级-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_name"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_toRightOf="@+id/fl"
                    android:background="@drawable/shape_touming"
                    android:orientation="horizontal"
                    android:paddingVertical="@dimen/dp_1"
                    android:paddingRight="@dimen/dp_8">

                    <ImageView
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"
                        android:src="@mipmap/hots" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="青铜会员"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/sp_13" />
                </LinearLayout>

                <!--动态、关注、粉丝、跳币-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginHorizontal="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_8"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/tv_dyNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="762"
                            android:textColor="#80000000"
                            android:textSize="@dimen/sp_18"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="动态"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/sp_15" />
                    </LinearLayout>

                    <View
                        android:layout_width="@dimen/dp_1"
                        android:layout_height="match_parent"
                        android:layout_marginVertical="@dimen/dp_5"
                        android:background="@android:color/white"
                        android:visibility="gone" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="762"
                            android:textColor="#80000000"
                            android:textSize="@dimen/sp_18"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_gzNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="关注"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/sp_15" />
                    </LinearLayout>

                    <View
                        android:layout_width="@dimen/dp_1"
                        android:layout_height="match_parent"
                        android:layout_marginVertical="@dimen/dp_5"
                        android:background="@android:color/white" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="762"
                            android:textColor="#80000000"
                            android:textSize="@dimen/sp_18"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_fsNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="粉丝"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/sp_15" />
                    </LinearLayout>

                    <View
                        android:layout_width="@dimen/dp_1"
                        android:layout_height="match_parent"
                        android:layout_marginVertical="@dimen/dp_5"
                        android:background="@android:color/white" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="762"
                            android:textColor="#80000000"
                            android:textSize="@dimen/sp_18"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_tbNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="跳币"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/sp_15" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <!--订单信息-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/list_style_theme_top">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_100"
                    android:background="@drawable/btn_ban_round_bg">


                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/ll_dynamic"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="@dimen/dp_45"
                                android:layout_height="@dimen/dp_45"
                                android:layout_gravity="center"
                                android:src="@mipmap/main_function_dynamic" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/dp_5"
                                android:drawablePadding="@dimen/dp_10"
                                android:gravity="center"
                                android:text="@string/dynamic"
                                android:textSize="@dimen/sp_14" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_my_work"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="@dimen/dp_45"
                                android:layout_height="@dimen/dp_45"
                                android:layout_gravity="center"
                                android:src="@mipmap/icon_works" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/dp_5"
                                android:gravity="center"
                                android:text="@string/my_work"
                                android:textSize="@dimen/sp_14" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_order"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="@dimen/dp_45"
                                android:layout_height="@dimen/dp_45"
                                android:layout_gravity="center"
                                android:src="@mipmap/icon_order" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/dp_5"
                                android:gravity="center"
                                android:text="@string/my_order"
                                android:textSize="@dimen/sp_14" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_history"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="@dimen/dp_45"
                                android:layout_height="@dimen/dp_45"
                                android:layout_gravity="center"
                                android:src="@mipmap/icon_history" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/dp_5"
                                android:gravity="center"
                                android:text="@string/browsing_history"
                                android:textSize="@dimen/sp_14" />
                        </LinearLayout>

                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:background="#F5F5F5"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@drawable/btn_round_bg"
                    android:orientation="vertical">

                    <com.dbvr.baselibrary.view.RowView
                        android:id="@+id/rv_coupon"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_50"
                        app:move_image="@mipmap/icon_coupon"
                        app:move_title="优惠卷" />
                    <View
                        android:background="#F5F5F5"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>
                    <com.dbvr.baselibrary.view.RowView
                        android:id="@+id/rv_evaluate"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_50"
                        app:move_image="@mipmap/icon_evaluate"
                        app:move_title="我的评价" />
                    <View
                        android:background="#F5F5F5"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>

                    <com.dbvr.baselibrary.view.RowView
                        android:id="@+id/rv_shopping_cart"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_50"
                        app:move_image="@mipmap/icon_shopping_cart"
                        app:move_title="购物车" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@drawable/btn_round_bg"
                    android:orientation="vertical">

                    <com.dbvr.baselibrary.view.RowView
                        android:id="@+id/rv_personal_data"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_50"
                        app:move_image="@mipmap/icon_personal_data"
                        app:move_title="个人资料" />
                    <View
                        android:background="#F5F5F5"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>
                    <com.dbvr.baselibrary.view.RowView
                        android:id="@+id/rv_merchant"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_50"
                        app:move_image="@mipmap/icon_merchant"
                        app:move_title="商家入驻" />
                    <View
                        android:background="#F5F5F5"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>
                    <com.dbvr.baselibrary.view.RowView
                        android:id="@+id/rv_apply"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_50"
                        app:move_image="@mipmap/icon_zb_apply"
                        app:move_title="主播申请" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@drawable/btn_round_bg"
                    android:orientation="vertical">

                    <com.dbvr.baselibrary.view.RowView
                        android:id="@+id/rv_setting"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_50"
                        app:move_image="@mipmap/icon_setting"
                        app:move_title="设置" />
                    <View
                        android:background="#F5F5F5"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>
                    <com.dbvr.baselibrary.view.RowView
                        android:id="@+id/rv_feedback"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_50"
                        app:move_image="@mipmap/icon_feedback"
                        app:move_title="反馈" />
                    <View
                        android:background="#F5F5F5"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>
                    <com.dbvr.baselibrary.view.RowView
                        android:id="@+id/rv_service"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_50"
                        app:move_image="@mipmap/icon_customer_service"
                        app:move_title="官方客服" />
                    <View
                        android:background="#F5F5F5"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>
                    <com.dbvr.baselibrary.view.RowView
                        android:id="@+id/rv_about"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_50"
                        app:move_image="@mipmap/icon_about"
                        app:move_title="关于我们" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


    </androidx.core.widget.NestedScrollView>


</RelativeLayout>
