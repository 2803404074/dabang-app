<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_220"
    android:background="@drawable/list_style_theme_top">

   <RelativeLayout
       android:id="@+id/fl"
       android:layout_width="@dimen/dp_80"
       android:layout_height="@dimen/dp_80"
       android:layout_marginLeft="@dimen/dp_5"
       android:layout_marginTop="@dimen/dp_55"
       android:background="@mipmap/ruone">

      <com.facebook.drawee.view.SimpleDraweeView
          android:id="@+id/sdvHead"
          android:layout_width="@dimen/dp_65"
          android:layout_height="@dimen/dp_65"
          android:layout_centerInParent="true"
          fresco:roundAsCircle="true" />
   </RelativeLayout>

   <TextView
       android:id="@+id/tv_name"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_centerHorizontal="true"
       android:layout_marginTop="@dimen/dp_65"
       android:layout_toRightOf="@+id/fl"
       android:drawableRight="@mipmap/back_b"
       android:drawablePadding="@dimen/dp_5"
       android:text="无敌风火轮"
       android:textColor="@android:color/white"
       android:textSize="@dimen/sp_13" />

   <!--会员等级-->
   <LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_below="@+id/tv_name"
       android:layout_marginTop="@dimen/dp_5"
       android:layout_toRightOf="@+id/fl"
       android:background="@drawable/shape_touming"
       android:orientation="horizontal"
       android:paddingVertical="@dimen/dp_1"
       android:paddingRight="@dimen/dp_8">

      <ImageView
          android:layout_width="@dimen/dp_20"
          android:layout_height="@dimen/dp_20"
          android:src="@mipmap/hots" />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="青铜会员"
          android:textColor="@android:color/white"
          android:textSize="@dimen/sp_13" />
   </LinearLayout>

   <!--动态、关注、粉丝、跳币-->
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_alignParentBottom="true"
       android:layout_marginHorizontal="@dimen/dp_10"
       android:layout_marginBottom="@dimen/dp_8"
       android:orientation="horizontal">

      <LinearLayout
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:orientation="vertical"
          android:visibility="gone">

         <TextView
             android:id="@+id/tv_dyNum"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_gravity="center"
             android:text="762"
             android:textColor="#80000000"
             android:textSize="@dimen/sp_18"
             android:textStyle="bold" />

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_gravity="center"
             android:text="动态"
             android:textColor="@android:color/white"
             android:textSize="@dimen/sp_15" />
      </LinearLayout>

      <View
          android:layout_width="@dimen/dp_1"
          android:layout_height="match_parent"
          android:layout_marginVertical="@dimen/dp_5"
          android:background="@android:color/white"
          android:visibility="gone" />

      <LinearLayout
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:orientation="vertical">

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_gravity="center"
             android:text="762"
             android:textColor="#80000000"
             android:textSize="@dimen/sp_18"
             android:textStyle="bold" />

         <TextView
             android:id="@+id/tv_gzNum"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_gravity="center"
             android:text="关注"
             android:textColor="@android:color/white"
             android:textSize="@dimen/sp_15" />
      </LinearLayout>

      <View
          android:layout_width="@dimen/dp_1"
          android:layout_height="match_parent"
          android:layout_marginVertical="@dimen/dp_5"
          android:background="@android:color/white" />

      <LinearLayout
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:orientation="vertical">

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_gravity="center"
             android:text="762"
             android:textColor="#80000000"
             android:textSize="@dimen/sp_18"
             android:textStyle="bold" />

         <TextView
             android:id="@+id/tv_fsNum"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_gravity="center"
             android:text="粉丝"
             android:textColor="@android:color/white"
             android:textSize="@dimen/sp_15" />
      </LinearLayout>

      <View
          android:layout_width="@dimen/dp_1"
          android:layout_height="match_parent"
          android:layout_marginVertical="@dimen/dp_5"
          android:background="@android:color/white" />

      <LinearLayout
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:orientation="vertical">

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_gravity="center"
             android:text="762"
             android:textColor="#80000000"
             android:textSize="@dimen/sp_18"
             android:textStyle="bold" />

         <TextView
             android:id="@+id/tv_tbNum"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_gravity="center"
             android:text="跳币"
             android:textColor="@android:color/white"
             android:textSize="@dimen/sp_15" />
      </LinearLayout>
   </LinearLayout>
</RelativeLayout>