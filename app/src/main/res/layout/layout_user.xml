<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_height="@dimen/dp_320"
    android:clipChildren="false">

   <ImageView
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:scaleType="centerCrop"
       android:src="@mipmap/test2"/>

   <TextView
       android:layout_margin="@dimen/dp_15"
       android:layout_above="@+id/llHead"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="设置封面"
       android:paddingHorizontal="@dimen/dp_10"
       android:paddingVertical="@dimen/dp_2"
       android:layout_alignParentRight="true"
       android:textColor="@android:color/white"
       android:background="@drawable/shape_touming"/>

   <LinearLayout
       android:id="@+id/llHead"
       android:clipChildren="false"
       android:layout_above="@+id/llMess"
       android:layout_width="match_parent"
       android:background="@android:color/white"
       android:layout_height="@dimen/dp_70"
       android:orientation="horizontal">

      <RelativeLayout
          android:id="@+id/fl"
          android:layout_gravity="bottom"
          android:layout_width="@dimen/dp_95"
          android:layout_height="@dimen/dp_95"
          android:layout_marginLeft="@dimen/dp_5"
          android:background="@mipmap/ruone">

         <com.facebook.drawee.view.SimpleDraweeView
             android:id="@+id/sdvHead"
             android:layout_width="@dimen/dp_95"
             android:layout_height="@dimen/dp_95"
             android:layout_centerInParent="true"
             fresco:roundAsCircle="true" />

      </RelativeLayout>


      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:gravity="center"
          android:paddingRight="@dimen/dp_5"
          android:orientation="vertical">
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textTitle"
                android:textSize="@dimen/sp_18"
                android:text="海之子123"/>
            <View
                android:layout_width="0dp"
                android:layout_height="1px"
                android:layout_weight="1"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/dp_10"
                android:paddingVertical="@dimen/dp_3"
                android:background="@drawable/shape_w_stroke"
                android:orientation="horizontal">
               <ImageView
                   android:layout_width="@dimen/dp_20"
                   android:layout_height="@dimen/dp_20"
                   android:src="@mipmap/edit"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textColor="@color/textTitle"
                   android:textSize="@dimen/sp_15"
                   android:text="编辑资料"/>
            </LinearLayout>

         </LinearLayout>

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="@dimen/dp_5"
             android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textTitle"
                android:textSize="@dimen/sp_14"
                android:text="跳跳号:"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textTitle"
                android:textSize="@dimen/sp_14"
                android:text="15655475"/>
            <View
                android:layout_width="0dp"
                android:layout_height="1px"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="青铜会员"/>

         </LinearLayout>
      </LinearLayout>

   </LinearLayout>


   <RelativeLayout
       android:id="@+id/llMess"
       android:paddingBottom="@dimen/dp_5"
       android:paddingHorizontal="@dimen/dp_10"
       android:layout_above="@+id/view_bottom"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:background="@android:color/white"
       android:orientation="vertical">
      <TextView
          android:id="@+id/tvNickName"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="@dimen/sp_16"
          android:text="昵称昵称昵称"/>

      <TextView
          android:id="@+id/tvLove"
          android:layout_below="@+id/tvNickName"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="@dimen/sp_15"
          android:text="爱好爱好爱好"/>


      <LinearLayout
          android:layout_marginTop="@dimen/dp_10"
          android:layout_below="@+id/tvLove"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">


         <LinearLayout
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="765"
                android:layout_marginLeft="@dimen/sp_10"
                android:textSize="@dimen/sp_21"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textColor="@color/colorDb5"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关注"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_5"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/lsq_color_gray"/>
         </LinearLayout>
         <LinearLayout
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="765"
                android:layout_marginLeft="@dimen/sp_10"
                android:textSize="@dimen/sp_21"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textColor="@color/colorDb5"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关注"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_5"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/lsq_color_gray"/>
         </LinearLayout>
         <LinearLayout
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="765"
                android:layout_marginLeft="@dimen/sp_10"
                android:textSize="@dimen/sp_21"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textColor="@color/colorDb5"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关注"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_5"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/lsq_color_gray"/>
         </LinearLayout>
      </LinearLayout>
   </RelativeLayout>

   <View
       android:id="@+id/view_bottom"
       android:layout_alignParentBottom="true"
       android:layout_width="match_parent"
       android:layout_height="@dimen/dp_15"
       android:background="@color/gra0"/>
</RelativeLayout>