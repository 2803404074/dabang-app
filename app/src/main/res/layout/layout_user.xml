<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_320"
    android:clipChildren="false">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@mipmap/test2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/llHead"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/dp_15"
        android:background="@drawable/shape_touming"
        android:paddingHorizontal="@dimen/dp_10"
        android:paddingVertical="@dimen/dp_2"
        android:text="设置封面"
        android:textColor="@android:color/white" />

    <LinearLayout
        android:id="@+id/llHead"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:layout_above="@+id/llMess"
        android:background="@android:color/white"
        android:clipChildren="false"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/fl"
            android:layout_width="@dimen/dp_115"
            android:layout_height="@dimen/dp_115"
            android:layout_gravity="bottom"
            android:layout_marginLeft="@dimen/dp_5"
            android:background="@mipmap/ruone">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/sdvHead"
                android:layout_width="@dimen/dp_115"
                android:layout_height="@dimen/dp_115"
                android:layout_centerInParent="true"
                fresco:roundAsCircle="true" />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingTop="@dimen/dp_3"
            android:orientation="vertical"
            android:paddingRight="@dimen/dp_5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvNickName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="海之子123"
                    android:layout_gravity="center|left"
                    android:textColor="@color/textTitle"
                    android:textSize="@dimen/sp_15" />
                <ImageView
                    android:id="@+id/ivVip"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:src="@mipmap/vip"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="跳跳号:"
                    android:layout_gravity="center"
                    android:textColor="@color/textTitle"
                    android:textSize="@dimen/sp_15" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15655475"
                    android:layout_gravity="center"
                    android:textColor="@color/textTitle"
                    android:textSize="@dimen/sp_15" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1px"
                    android:layout_weight="1" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/ivGrade"
                        android:layout_width="@dimen/dp_30"
                        android:layout_height="@dimen/dp_30"
                        android:src="@mipmap/u_one"/>
                    <TextView
                        android:id="@+id/tvGrade"
                        android:layout_toRightOf="@+id/ivGrade"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="青铜会员"
                        android:layout_marginRight="@dimen/dp_5"
                        android:textColor="@color/colorGray4"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/sp_15" />
                </RelativeLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/tvLove"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="爱好爱好爱好"
                android:layout_gravity="left"
                android:textSize="@dimen/sp_15" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/llMess"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/view_bottom"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/dp_10"
        android:paddingVertical="@dimen/dp_5">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/dp_10"
            android:gravity="center"
            android:orientation="horizontal">


            <LinearLayout
                android:id="@+id/llFollow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvFollow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/sp_10"
                    android:text="765"
                    android:textColor="@color/colorDb5"
                    android:textSize="@dimen/sp_18"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:text="关注"
                    android:textColor="@color/lsq_color_gray"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llFans"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvFans"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/sp_10"
                    android:text="765"
                    android:textColor="@color/colorDb5"
                    android:textSize="@dimen/sp_18"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:text="粉丝"
                    android:textColor="@color/lsq_color_gray"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llDrop"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvDropNom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/sp_10"
                    android:text="765"
                    android:textColor="@color/colorDb5"
                    android:textSize="@dimen/sp_18"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:text="跳币"
                    android:textColor="@color/lsq_color_gray"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <View
        android:id="@+id/view_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_15"
        android:layout_alignParentBottom="true"
        android:background="@color/gra0" />
</RelativeLayout>