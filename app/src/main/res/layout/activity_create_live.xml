<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:roundiv="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".live.activity.CreateLiveActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/rl_toolbar"
        android:background="@color/green02"
        android:layout_height="@dimen/dp_35">

        <TextView
            android:id="@+id/tvBack"
            android:textSize="@dimen/sp_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_5"
            android:text="取消"
            android:textColor="@android:color/white"
            android:layout_centerVertical="true" />
        <TextView
            android:id="@+id/tv_title"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_18"
            android:textColor="@android:color/white"
            android:text="创建直播"/>
    </RelativeLayout>

    <EditText
        android:id="@+id/etTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="直播间标题"
        android:layout_marginVertical="@dimen/dp_10"
        android:layout_marginHorizontal="@dimen/dp_10"
        android:paddingHorizontal="@dimen/dp_5"
        android:paddingVertical="@dimen/dp_5"
        android:background="@drawable/shape_gray"/>

    <RelativeLayout
        android:layout_width="@dimen/dp_130"
        android:layout_height="@dimen/dp_156">
        <com.dbvr.baselibrary.ui.MyImageView
            android:id="@+id/iv_content"
            android:onClick="onClickImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:layout_margin="@dimen/dp_10"
            roundiv:radius="@dimen/dp_10"
            android:src="@mipmap/test"
            tools:ignore="OnClick" />
        <TextView
            android:id="@+id/tvAdd"
            android:textColor="@android:color/white"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加封面+"/>
    </RelativeLayout>




    <EditText
        android:id="@+id/etContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="5"
        android:ellipsize="end"
        android:gravity="top"
        android:hint="介绍你的直播间吧!(100字以内)"
        android:layout_marginVertical="@dimen/dp_10"
        android:layout_marginHorizontal="@dimen/dp_10"
        android:paddingHorizontal="@dimen/dp_5"
        android:paddingVertical="@dimen/dp_5"
        android:background="@drawable/shape_gray"/>

    <TextView
        android:id="@+id/tvAddTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_style_green_blue"
        android:textColor="@android:color/white"
        android:paddingHorizontal="@dimen/dp_10"
        android:paddingVertical="@dimen/dp_5"
        android:layout_margin="@dimen/dp_10"
        android:textSize="@dimen/sp_14"
        android:text="添加标签"/>
    <LinearLayout
        android:id="@+id/ll_TagContent"
        android:paddingHorizontal="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_14"
        android:textColor="@android:color/black"
        android:layout_margin="@dimen/dp_10"
        android:text="直播属性"/>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/dp_10"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/rb_live"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="创建直播"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="创建预告"/>
    </RadioGroup>

    <View
        android:layout_width="1px"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <TextView
        android:id="@+id/tvCreate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_style_follw_green"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:layout_marginBottom="@dimen/dp_20"
        android:layout_marginHorizontal="@dimen/dp_20"
        android:textSize="@dimen/sp_14"
        android:paddingVertical="@dimen/dp_10"
        android:text="创建" />
</LinearLayout>