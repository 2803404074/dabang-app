<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_250">

    <!--<ImageView-->
    <!--android:id="@+id/miv_view"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"-->
    <!--android:scaleType="centerCrop"-->
    <!--android:src="@mipmap/test2"/>-->
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/miv_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_250"
        android:layout_gravity="center"
        fresco:actualImageScaleType="focusCrop"
        fresco:placeholderImage="@mipmap/test2"
        fresco:progressBarAutoRotateInterval="1000"
        fresco:progressBarImage="@mipmap/loading"
        fresco:roundedCornerRadius="@dimen/dp_5"
        fresco:roundingBorderColor="@color/colorWhite" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_5"
        android:background="@drawable/shape_style_green_blue"
        android:paddingHorizontal="@dimen/dp_10"
        android:paddingVertical="@dimen/dp_2"
        android:text="直播中"
        android:textColor="@color/white" />

    <LinearLayout
        android:layout_margin="@dimen/dp_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_headUrl"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_gravity="center"
            android:textColor="@color/color_48f5f7"
            android:textSize="9sp" />

        <TextView
            android:id="@+id/zb_nickName"
            android:layout_width="@dimen/dp_40"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_5"
            android:ellipsize="end"
            android:lines="1"
            android:text="菲尔"
            android:textColor="@color/black"
            android:textSize="10dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_margin="@dimen/dp_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_gravity="center"
            android:src="@mipmap/heart_zb" />

        <TextView
            android:id="@+id/zb_likeCounts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_5"
            android:text="100W"
            android:textColor="@color/white"
            android:textSize="10dp" />
    </LinearLayout>
</RelativeLayout>