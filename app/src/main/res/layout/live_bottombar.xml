<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/button_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="2dp"
        android:paddingRight="2dp">

        <LinearLayout
            android:id="@+id/llComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_touming"
            android:paddingHorizontal="@dimen/dp_10"
            android:paddingVertical="@dimen/dp_3"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                android:src="@mipmap/comment"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="来聊聊天吧..."
                android:layout_marginLeft="@dimen/dp_5"
                android:textSize="@dimen/sp_16"
                android:layout_gravity="center"
                android:textColor="#cdcdcd"/>

        </LinearLayout>

        <LinearLayout
            android:gravity="right"
            android:padding="@dimen/dp_5"
            android:layout_toRightOf="@+id/llComment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/btn_barrage"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_toLeftOf="@id/btn_gift"
                android:src="@mipmap/chat_danmu" />


            <ImageView
                android:id="@+id/btn_heart"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_marginHorizontal="@dimen/dp_5"
                android:layout_alignParentRight="true"
                android:src="@mipmap/gift" />

            <ImageView
                android:id="@+id/btn_gift"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@id/btn_heart"
                android:src="@mipmap/goods" />


            <ImageView
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@id/btn_gift"
                android:src="@mipmap/wechat_frends" />

            <ImageView
                android:id="@+id/ivLove"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_alignParentRight="true"
                android:src="@mipmap/live_heart" />
        </LinearLayout>

    </RelativeLayout>

</FrameLayout>