<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:roundiv="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/dp_5"
    android:paddingVertical="@dimen/dp_5"
    android:background="@drawable/shape_style_yellow_org"
    tools:context=".comment.activity.MainActivity">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="跳跳直播"
        android:textColor="@color/green02"
        android:layout_gravity="center"
        android:textSize="@dimen/sp_25"/>

    <TextView
        android:id="@+id/tv_tips"
        android:textSize="@dimen/sp_15"
        android:textColor="@android:color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="您已直播：xxxxx"/>

    <TextView
        android:id="@+id/tvPersonNum"
        android:textSize="@dimen/sp_15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/dp_5"
        android:textColor="@android:color/white"
        android:text="当前人数已到达：2568人"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/holo_red_dark"
        android:layout_marginBottom="@dimen/dp_10"
        android:text="是否确定结束直播？"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvKeepLive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_style_green_blue"
            android:textColor="@android:color/white"
            android:paddingHorizontal="@dimen/dp_10"
            android:paddingVertical="@dimen/dp_3"
            android:textSize="@dimen/sp_15"
            android:text="继续直播"/>
        <View
            android:layout_width="1px"
            android:layout_height="1px"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tvConfirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/lsq_color_gray"
            android:paddingHorizontal="@dimen/dp_10"
            android:paddingVertical="@dimen/dp_3"
            android:textSize="@dimen/sp_15"
            android:text="确定"/>
    </LinearLayout>
</LinearLayout>